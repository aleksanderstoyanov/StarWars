@page
@model RegisterModel

<div class="row">
    <div class="col-md-4 offset-4 border-bottom border-left border-right border-top shadow p-5 mb-5 bg-dark rounded">
        <section>
            <form id="account" method="post">
                <h4 class="text-center mt-2"><i class="far fa-user" style="font-size:50px; color:white;"></i></h4>
                <hr class="bg-white" />
                <div class="form-group">
                    <label asp-for="Input.Email" style="color:white;"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" style="color:white;"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" style="color:white;"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width:100%;">Register</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(".row").hide(200).slideDown(1000);
    </script>
}
