@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to a sample Star Wars Razor Page";
    var firstCharacter = Model.Characters[0];
    var secondCharacter = Model.Characters[1];
    var thirdCharacter = Model.Characters[2];
}



<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>
<div class="container d-flex justify-content-center">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width:800px;">
        <div class="carousel-inner">

            <div class="carousel-item active">
                <img src="@firstCharacter.Image" class="d-block w-100" alt="..." style="height:450px;">
                <div class="carousel-caption d-none d-md-block">

                    <p class="h3 font-weight-bold">@firstCharacter.Name</p>
                    <h5><a class="btn btn-success text-center" asp-page="/Characters/Details" asp-route-id="@firstCharacter.Id">Details <i class="fas fa-journal-whills"></i></a></h5>
                </div>
            </div>


            <div class="carousel-item">
                <img src="@secondCharacter.Image" class="d-block w-100" alt="..." style="height:450px;">
                <div class="carousel-caption d-none d-md-block">

                    <p class="h3 font-weight-bold">@secondCharacter.Name</p>
                    <h5><a class="btn btn-success text-center" asp-page="/Characters/Details" asp-route-id="@secondCharacter.Id">Details <i class="fas fa-journal-whills"></i></a></h5>
                </div>
            </div>


            <div class="carousel-item">
                <img src="@thirdCharacter.Image" class="d-block w-100" alt="..." style="height:450px;">
                <div class="carousel-caption d-none d-md-block">

                    <p class="h3 font-weight-bold">@thirdCharacter.Name</p>
                    <h5><a class="btn btn-success text-center" asp-page="/Characters/Details" asp-route-id="@thirdCharacter.Id">Details <i class="fas fa-journal-whills"></i></a></h5>
                </div>
            </div>


        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
@section scripts{
    <script>
        $(".container").hide().slideDown(800);
    </script>
}

