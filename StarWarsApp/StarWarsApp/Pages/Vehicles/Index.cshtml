@page
@model StarWarsApp.Pages.Vehicles.IndexModel
@{
	ViewData["Title"] = "Star Wars Vehicles";
}
<div class="container">
	<h2 class="text-center">@ViewData["Title"] <i class="fas fa-space-shuttle"></i></h2>
	<div class="row d-flex justify-content-center">
	</div>
</div>
@section scripts{
<script>
	$(function(){
	   $.get("/api/vehicles",function(data){
		   $.each(data,function(index,vehicle){
			const {id,name,image}=vehicle;
			$(".row").append(
			'<div class="card col-md-3 bg-dark m-3 mb-3 shadow p-2 mb-5 bg-white rounded" style="width: 18rem;">' +
				'<img class="card-img-top" src='+image+' alt="Card image cap" style="height:350px;">'+
				'<div class="card-body bg-dark text-center">'+
				'<p style="color:white">'+name+'</p>'+
				'</div>'+
			'</div>')
		  })
		 $(".row").hide(500).slideDown(1000);
	   })
	})
</script>
}
